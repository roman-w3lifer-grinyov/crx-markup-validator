{
  "manifest_version": 3,
  "name": "Markup Validator",
  "description": "Check the markup of the current page using various markup validators",
  "version": "1.0.7",
  "icons": {
    "16": "img/icons/16x16.png",
    "48": "img/icons/48x48.png",
    "128": "img/icons/128x128.png"
  },
  "action": {
    "default_icon": {
      "16": "img/icons/16x16.png",
      "24": "img/icons/24x24.png",
      "32": "img/icons/32x32.png"
    },
    "default_title": "Markup Validator",
    "default_popup": "html/popup.html"
  },
  "background": {
    "service_worker": "js/service-worker.js"
  },
  "permissions": [
    "storage",
    "tabs"
  ]
}
